<div class="container">
  <p id="notice"><%= notice %></p>

  <div class='row'>
    <div class='container mt-2'>
      <div class='row'>
        <div class='col'>
          <h3> Cities </h3>
        </div> 
        <div class='mt-3'>
          <% cities.each do |key, filter| %>
            <div class='row m-0'>
              <div class='col'>
                <% city = City.find(key) %>
                <p class='lead my-1 py-0'>
                  <%= link_to city.name + " (#{filter[:size]})",
                    "?filter_citty_ids=#{filter[:key]}",
                    class: 'text-decoration-none text-dark' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
