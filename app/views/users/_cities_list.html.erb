<div class="container">
  <p id="notice"><%= notice %></p>

  <div class='row'>
    <div class='container mt-5'>
      <div class='row'>
        <div class='col'>
          <h3> Cities </h3>
        </div>
        <div class='mt-3'>
          <% @cities.each do |city| %>
            <div class='row m-0'>
              <div class='col'>
                <p class='lead my-1 py-0'> <%= city.name %> </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
